<div class="jumbotron">
  <div class="row">
    <div class="col-lg-12">
      <div class="well bs-component">

        <%= form_for (@st_ma_file) do |form| %>
          <%= render 'errors', object: @st_ma_file %>
            <fieldset>
            <legend>ST-FILE-MA</legend>

              <div class="col-lg-6">
                <div class="form-group">
                  <label for="st_ma_file_st_ma_cer_source" class="control-label">Certificate Source</label>
                  <%= form.text_field :st_ma_cer_source, class: 'form-control', id: 'st_ma_file_st_ma_cer_source', placeholder: 'Certificate Source', autofocus: true %>
                </div>

                <div class="form-group">
                  <label for="st_ma_file_st_ma_cer_field" class="control-label">Certificate Field</label>
                  <%= form.text_field :st_ma_cer_field, class: 'form-control', id: 'st_ma_file_st_ma_cer_field', placeholder: 'Certificate Field', autofocus: true %>
                </div>

                <div class="form-group">
                  <label for="st_ma_file_st_ma_cer_marks" class="control-label">Certificate Marks</label>
                  <%= form.text_field :st_ma_cer_marks, class: 'form-control', id: 'st_ma_file_st_ma_cer_marks', placeholder: 'Certificate Marks', autofocus: true %>
                </div>

                <div class="form-group">
                  <label for="st_ma_file_st_ma_cer_year" class="control-label">Certificate Year</label>
                  <%= form.text_field :st_ma_cer_year, class: 'form-control', id: 'st_ma_file_st_ma_cer_year', placeholder: 'Certificate Year', autofocus: true %>
                </div>

              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="st_ma_file_st_ma_cer_source" class="control-label">Certificate Source</label>
                  <%= form.text_field :st_ma_cer_source, class: 'form-control', id: 'st_ma_file_st_ma_cer_source', placeholder: 'Certificate Source', autofocus: true %>
                </div>

                <div class="upload_div">
                  <div class="form-group upload_area">
                    <label for="st_ma_file_st_ma_passport_photo" class="control-label">Passport Photo</label>
                    <%= form.file_field :st_ma_passport_photo, class: 'btn btn-default btn-xs', id: 'st_ma_file_st_ma_passport_photo', placeholder: 'Passport Photo', autofocus: true %>
                  </div>

                  <div class="form-group upload_area">
                    <label for="st_ma_file_st_ma_offical_photo" class="control-label">Official Photo</label>
                    <%= form.file_field :st_ma_offical_photo, class: 'btn btn-default btn-xs', id: 'st_ma_file_st_ma_offical_photo', placeholder: 'Official Photo', autofocus: true %>
                  </div>

                  <div class="form-group upload_area">
                    <label for="st_ma_file_st_ma_extra_photo1" class="control-label">Extra Photo1</label>
                    <%= form.file_field :st_ma_extra_photo1, class: 'btn btn-default btn-xs', id: 'st_ma_file_st_ma_extra_photo1', placeholder: 'Extra Photo', autofocus: true %>
                  </div>

                  <div class="form-group upload_area">
                    <label for="st_ma_file_st_ma_extra_photo2" class="control-label">Extra Photo2</label>
                    <%= form.file_field :st_ma_extra_photo2, class: 'btn btn-default btn-xs', id: 'st_ma_file_st_ma_extra_photo2', placeholder: 'Certificate Source', autofocus: true %>
                  </div>
                </div><br>
                  
                  <%= form.hidden_field :user_id, value: current_user.id %>
                  
                <div class="actions">
                  <%= form.button 'Save file', :class => "btn btn-primary", style: 'width:65%;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Creating file...."} %>
                </div>
              </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
