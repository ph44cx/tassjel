<script type="text/javascript">
  $(document).ready(function(){
    $('#createUniversity').click(function(){
      $('.row').empty();
      $(".row").append("<%= escape_javascript render(:partial => '/universities/form') %>");
    })
    $(".myTable").DataTable();
  });
</script>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <table class="table table-striped table-bordered dt-responsive nowrap myTable" cellspacing="0" width="100%">
      <button id="createUniversity" class="btn btn-primary custom">Create university</button>
        <thead>
          <tr>
            <th>University name</th>
            <th>Country</th>
            <th>City</th>
            <th>Sector</th>
            <th style="width: 15%;">Actions</th>
          </tr>
        </thead>
          <tbody>
          <% @universitys.each do |university| %>
            <tr>
              <td><%= university.uni_name %></td>
              <td><%= university.uni_country %></td>
              <td><%= university.uni_city %></td>
              <td><%= university.uni_sector %></td>
              <td><%= link_to 'Show', university_path(university), remote: true %>
                  <%= link_to 'Edit', edit_university_path(university), remote: true %>
                  <%= link_to 'Destroy', university, data: { behavior: 'delete' } %>
              </td>
            </tr>
            <%end%>
          </tbody>
      </table>
    </div>
  </div>
</div>