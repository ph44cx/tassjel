<script type="text/javascript">
  $(document).ready(function(){
    $('#createUniversity').click(function(){
      $('.row').empty();
      $(".row").append("<%= escape_javascript render(:partial => '/unm_uns/form') %>");
    })
  });
</script>
<style type="text/css">
  .custom{
    float: right;
    margin-top: -13px;
    width: 22%;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <table class="table table-striped table-bordered dt-responsive nowrap myTable" cellspacing="0" width="100%">
      <button id="createUniversity" class="btn btn-primary custom">Create university</button>
        <thead>
          <tr>
            <th>University name</th>
            <th>Country</th>
            <th>City</th>
            <th>Sector</th>
            <th style="width: 15%;">Actions</th>
          </tr>
        </thead>
          <tbody>
          <% @unm_uns.each do |unm_un| %>
            <tr>
              <td><%= unm_un.uni_name %></td>
              <td><%= unm_un.uni_country %></td>
              <td><%= unm_un.uni_city %></td>
              <td><%= unm_un.uni_sector %></td>
              <td><%= link_to 'Show', unm_un_path(unm_un), remote: true %>
                  <%= link_to 'Edit', edit_unm_un_path(unm_un), remote: true %>
                  <%= link_to 'Destroy', unm_un, data: { behavior: 'delete' } %>
              </td>
            </tr>
            <%end%>
          </tbody>
      </table>
    </div>
  </div>
</div>