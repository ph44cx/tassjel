<div class="jumbotron">
  <div class="row">
    <div class="col-lg-12">
      <div class="well bs-component">

        <%= form_for (@st_phd_file) do |form| %>
          <%= render 'errors', object: @st_phd_file %>
          <fieldset>
          <legend>ST-FILE-PHD</legend>

            <div class="col-lg-6">
              <div class="form-group">
                <label for="st_phd_file_st_maba_cer_source" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maba_cer_source, class: 'form-control', id: 'st_phd_file_st_maba_cer_source', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="form-group">
                <label for="st_phd_file_st_maba_cer_field" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maba_cer_field, class: 'form-control', id: 'st_phd_file_st_maba_cer_field', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="form-group">
                <label for="st_phd_file_st_maba_cer_marks" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maba_cer_marks, class: 'form-control', id: 'st_phd_file_st_maba_cer_marks', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="form-group">
                <label for="st_phd_file_st_maba_cer_year" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maba_cer_year, class: 'form-control', id: 'st_phd_file_st_maba_cer_year', placeholder: 'Certificate Source', autofocus: true %>
              </div>
            </div>

            <div class="col-lg-6">

              <div class="form-group">
                <label for="st_phd_file_st_maphd_cer_source" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maphd_cer_source, class: 'form-control', id: 'st_phd_file_st_maphd_cer_source', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="form-group">
                <label for="st_phd_file_st_maphd_cer_field" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maphd_cer_field, class: 'form-control', id: 'st_phd_file_st_maphd_cer_field', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="form-group">
                <label for="st_phd_file_st_maphd_cer_marks" class="control-label">Certificate Source</label>
                <%= form.text_field :st_maphd_cer_marks, class: 'form-control', id: 'st_phd_file_st_maphd_cer_marks', placeholder: 'Certificate Source', autofocus: true %>
              </div>

              <div class="actions">
                <%= form.button 'Save file', :class => "btn btn-primary", style: 'width:65%;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Creating file...."} %>
              </div>
              
              <%= form.hidden_field :user_id, value: current_user.id %> 

            </div><br/> 
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

