<script>
  $(document).ready(function(){
    $('.tabReload').click(function(){
      window.location.replace("<%=st_dashboard_url%>");
    });
  });
</script>

<div class="container">
	<%if current_user.service == "Bachelor Degree" && current_user.st_ba_file.nil?%>
			<a class="btn btn-primary btn-lg btn-block" id="createStFile" href="/st_ba_files/new">Create file</a>
		<%end%>
		<%if current_user.service == "Master" && current_user.st_ma_file.nil?%>
			<a class="btn btn-primary btn-lg btn-block" id="createStFile" href="/st_ma_files/new">Create file</a>
		<%end%>
		<% if current_user.service == "PhD" && current_user.st_phd_file.nil?%>
			<a class="btn btn-primary btn-lg btn-block" id="createStFile" href="/st_phd_files/new">Create file</a>
		<%end%>
		<%if current_user.service == "Transfer University" && current_user.st_tr_file.nil?%>
			<a class="btn btn-primary btn-lg btn-block" id="createStFile" href="/st_tr_files/new">Create file</a>
		<%end%><br>
	<div class="jumbotron">
		<ul class="nav nav-tabs tabReload" id="myTabs">
			<li class=""><a href="#en_myFile" id="uploadedFile" data-toggle="tab" aria-expanded="false">My file</a></li>
	  	<li class="active"><a href="#en_home" data-toggle="tab" aria-expanded="true">Profile</a></li>
	  	<li><a href="#en_package" data-toggle="tab" aria-expanded="false" id="en_membership">Membership</a></li>
	  	<li class=""><a href="#en_instruction" id="en_instructionID" data-toggle="tab" aria-expanded="false">Instructions</a></li>
		</ul>
		<div class="tab-content">
		  <div class="tab-pane fade" id="en_myFile">
		  	<%if current_user.service == "Bachelor Degree"%>
		    	<%= render template: '/st_ba_files/show'%>
		    	<%elsif current_user.service == "Master" %>
		    	<%= render template: '/st_ma_files/show'%>
		    	<%elsif current_user.service == "PhD" %>
		    	<%= render template: '/st_phd_files/show'%>
		    	<%elsif current_user.service == "Transfer University" %>
		    	<%= render template: '/st_tr_files/show'%>
		    	<%else%>
		    	<%nil%>
		    <%end%>
		  </div>
		  <div class="tab-pane fade active in" id="en_home">
		    <%= render template: '/st_profiles/show'%>
		  </div>
		  <div class="tab-pane fade" id="en_package">
		  	<%= render partial: 'membership'%>
		  </div>
		  <div class="tab-pane fade" id="en_instruction">
		    <%= render partial: 'instruction'%>
		  </div>
		</div>
	</div>
</div>