<div class="row">
  <div class="col-lg-7" style="margin: auto;float: none;">
    <div class="well bs-component">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => 'form-horizontal') do |f| %>
        <%= devise_error_messages! %>
      <fieldset>
        <legend>Sign up</legend>
        <div class="form-group">
          <label for="inputFirstname" class="col-lg-2 control-label">First Name</label>
          <div class="col-lg-10">
            <%= f.text_field :first_name, class: "form-control", id: "inputFirstname", placeholder: "First name", autofocus: true %><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputSurname" class="col-lg-2 control-label">Surname</label>
          <div class="col-lg-10">
            <%= f.text_field :surname, class: "form-control", id: "inputSurname", placeholder: "Surname", autofocus: true %><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">Email</label>
          <div class="col-lg-10">
            <%= f.email_field :email, class: "form-control", id: "inputEmail", placeholder: "Email", autofocus: true %><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-lg-2 control-label">Password</label>
          <div class="col-lg-10">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "off" %><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputPasswordConfirmation" class="col-lg-2 control-label">Password confirmation</label>
          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, class: "form-control", id: "inputPasswordConfirmation", placeholder: "Password confirmation", autocomplete: "off" %><br/>
          </div>
        </div>
        <div class="form-group">
          <label for="select" class="col-lg-2 control-label">Select service</label>
          <div class="col-lg-10">
            <%= f.select :service, User::SERVICE, { prompt: "Select service" }, { class: "form-control", id: "select", :required => true, style: 'width:100%;' }%><br/>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        </div>
          <%= render "devise/shared/links" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
