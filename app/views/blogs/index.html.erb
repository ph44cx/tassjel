<div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">
            <%@blogs.each do |blog|%>

                <!-- First Blog Post -->
                <h3>
                    <a href="blogs/<%= blog.id%>"><%= blog.title%></a>
                </h3>
                <p class="lead">
                   <%= blog.subtitle%>
                </p>
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= blog.created_at%></p>
                <hr>
                <%= image_tag blog.blog_image, style: 'width:750px;height:250px;'%>
                <hr>
                <p><%= blog.body.html_safe%></p>
                <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

                <hr>
                <%end%>
                <!-- Pager -->
                <ul class="pager">
                    <li class="previous">
                        <a href="#">&larr; Older</a>
                    </li>
                    <li class="next">
                        <a href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <div class="well">
                    <h4>Recent Blogs</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled">
                              <%Blog.all.each do |blog|%>
                                <li><a href="/blogs/<%= blog.id%>"><%= blog.title%></a>
                                </li>
                              <%end%>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->