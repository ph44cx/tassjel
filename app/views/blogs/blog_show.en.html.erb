<%= render '/shared/blogger_nav' %>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <legend>
        <%= link_to 'Back', blogs_path, class: "btn btn-primary custom"%>
        <%= link_to 'Edit', edit_blog_path(@blog) %>
        </legend>
          <div class="col-sm-4">
          <p>
            <strong>Title:</strong>
            <%= @blog.title %>
          </p>

          <p>
            <strong>Subtitle:</strong>
            <%= @blog.subtitle %>
          </p>

          <p>
            <strong>Tags:</strong>
            <%= @blog.tags %>
          </p>

          <p>
            <strong>Share:</strong>
            <%= @blog.share %>
          </p>

          <p>
            <strong>Blog image:</strong>
            <%= @blog.blog_image %>
          </p>

          </div>

          <div class="col-sm-8">

          <p>
            <strong>Body:</strong>
            <%= @blog.body.html_safe %>
          </p>

          
          </div>
        </fieldset>
      </div>
    </div>
  </div>
