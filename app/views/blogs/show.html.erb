    <div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                <h3><%= @blog.title%></h3>

                <!-- Author -->
                <p class="lead">
                  <%= @blog.subtitle%>
                </p>

                <hr>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= @blog.created_at%></p>

                <hr>

                <!-- Preview Image -->
                <%= image_tag @blog.blog_image, style: 'width:750px;height:250px;'%>

                <hr>

                <!-- Post Content -->
                <p class="lead"><%= @blog.body.html_safe%></p>
                <p><span><%= @blog.tags %></span>
                    <span style="float:right;"><%= @blog.share%></span></p>
                <hr>

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div id="comments_new">
                <div class="well">
                  <%= render '/comments/form'%>
                </div>

                <hr>

                <!-- Posted Comments -->
                  <%= comments_tree_for @comments %>
                </div>
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Recent Blogs</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                              <%Blog.all.each do |blog|%>
                                <li><a href="/blogs/<%= blog.id%>"><%= blog.title%></a>
                                </li>
                              <%end%>
                            </ul>
                        </div>
                    </div>
                    <!-- /.row -->
                </div>

            </div>

        </div>

    </div>
    <!-- /.container