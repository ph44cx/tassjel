<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <legend>My Profile
        <%= link_to 'Edit', edit_st_profile_path(@st_profile), :class => 'btn btn-primary btn-block',style:'width:40%;float: right;', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>Please wait...."}, remote: true %></legend>
        <div class="col-sm-4">
          <p>
            <strong>First name:</strong>
            <%= @st_profile.try(:st_ba_name) %>
          </p>

          <p>
            <strong>Surname:</strong>
            <%= @st_profile.try(:st_ba_surname) %>
          </p>

          <p>
            <strong>Father name:</strong>
            <%= @st_profile.try(:st_ba_father) %>
          </p>

          <p>
            <strong>Mother name:</strong>
            <%= @st_profile.try(:st_ba_mother) %>
          </p>
        </div>

        <div class="col-sm-4">

          <p>
            <strong>Cellphone:</strong>
            <%= @st_profile.try(:st_ba_cellphone) %>
          </p>

          <p>
            <strong>Passport number:</strong>
            <%= @st_profile.try(:st_ba_passport) %>
          </p>

          <p>
            <strong>Nationality:</strong>
            <%= @st_profile.try(:st_ba_nationality) %>
          </p>

          <p>
            <strong>Current country:</strong>
            <%= @st_profile.try(:st_ba_country) %>
          </p>

        </div>

        <div class="col-sm-4">
          <p>
            <strong>Passport photo:</strong>
            <%= image_tag @st_profile.st_ba_passport_photo.url(:thumb) if @st_profile.st_ba_passport_photo? %>
          </p>

          <p>
            <strong>Official photo:</strong>
            <%= image_tag @st_profile.st_ba_official_photo.url(:thumb) if @st_profile.st_ba_official_photo?%>
          </p>
        </div>

      </fieldset>
    </div>
  </div>
</div>