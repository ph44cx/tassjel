<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $("#go_back").click(function(){
      $(".row").empty();
      $(".row").append("<%= escape_javascript render(:template => '/st_profiles/show') %>");
    });
  });
</script>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <%= form_for (@st_profile), remote: true, :html => { :class => "form-horizontal leave" } do |form| %>
          <fieldset>
            <legend>Edit profile</legend>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="profile_st_ba_name" class="col-lg-2 control-label">First name</label>
                <div class="col-lg-10">
                  <%= form.text_field :st_ba_name, class: 'form-control', id: 'profile_st_ba_name', placeholder: 'First name', autofocus: true, value: current_user.first_name %><br/>
                </div>
              </div>

              <div class="form-group">
                <label for="profile_st_ba_surname" class="col-lg-2 control-label">Surname</label>
                <div class="col-lg-10">
                  <%= form.text_field :st_ba_surname, class: 'form-control', id: 'profile_st_ba_surname', placeholder: 'Surname', autofocus: true, value: current_user.surname %><br/>
                </div>
              </div>

              <div class="form-group">
                <label for="profile_st_ba_father" class="col-lg-2 control-label">Father name</label>
                <div class="col-lg-10">
                  <%= form.text_field :st_ba_father, class: 'form-control', id: 'profile_st_ba_father', placeholder: 'Father name', autofocus: true %><br/>
                </div>
              </div>
            
              <div class="form-group">
                <label for="profile_st_ba_mother" class="col-lg-2 control-label">Mother name</label>
                <div class="col-lg-10">
                  <%= form.text_field :st_ba_mother, class: 'form-control', id: 'profile_st_ba_mother', placeholder: 'Mother name', autofocus: true %><br/>
                </div>
              </div>
            </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label for="profile_st_ba_cellphone" class="col-lg-2 control-label">Cellphone</label>
              <div class="col-lg-10">
                <%= form.text_field :st_ba_cellphone, class: 'form-control', id: 'profile_st_ba_cellphone', placeholder: 'Cellphone', autofocus: true %><br/>
              </div>
            </div>

            <div class="form-group">
              <label for="profile_st_ba_passport" class="col-lg-2 control-label">Passport no.</label>
              <div class="col-lg-10">
                <%= form.text_field :st_ba_passport, class: 'form-control', id: 'profile_st_ba_passport', placeholder: 'Passport no.', autofocus: true %><br/>
              </div>
            </div>

            <div class="form-group">
              <label for="profile_st_ba_nationality" class="col-lg-2 control-label">Nationality</label>
              <div class="col-lg-10">
                <%= form.text_field :st_ba_nationality, class: 'form-control', id: 'profile_st_ba_nationality', placeholder: 'Nationality', autofocus: true %><br/>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= form.submit "Update", class: "btn btn-primary", style: 'width:65%;' %>&nbsp;&nbsp;
                <li class="btn btn-primary" style='width:30%;' id="go_back"> Cancel</li>   
              </div>
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>