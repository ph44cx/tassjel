<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $('input[type=file]').bootstrapFileInput();
    $("#go_back").click(function(){
      $(".tab-pane").empty();
      $(".tab-pane").append("<%= escape_javascript render(:template => '/st_profiles/show') %>");
    });
  });
</script>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <%= form_for (@st_profile), :html => { novalidate: true } do |form| %>
          <fieldset>
            <legend>Edit profile</legend>
            <div class="col-lg-6">
              <div class="form-group">
                <label for="profile_st_ba_name">First name</label>
                  <%= form.text_field :st_ba_name, class: 'form-control', id: 'profile_st_ba_name', placeholder: 'First name', autofocus: true, value: current_user.first_name %>
              </div>

              <div class="form-group">
                <label for="profile_st_ba_surname">Surname</label>
                  <%= form.text_field :st_ba_surname, class: 'form-control', id: 'profile_st_ba_surname', placeholder: 'Surname', autofocus: true, value: current_user.surname %>
              </div>

              <div class="form-group">
                <label for="profile_st_ba_father">Father name</label>
                  <%= form.text_field :st_ba_father, class: 'form-control', id: 'profile_st_ba_father', placeholder: 'Father name', autofocus: true %>
              </div>
            
              <div class="form-group">
                <label for="profile_st_ba_mother">Mother name</label>
                  <%= form.text_field :st_ba_mother, class: 'form-control', id: 'profile_st_ba_mother', placeholder: 'Mother name', autofocus: true %>
              </div>
            </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label for="profile_st_ba_cellphone">Cellphone</label>
                <%= form.text_field :st_ba_cellphone, class: 'form-control', id: 'profile_st_ba_cellphone', placeholder: 'Cellphone', autofocus: true %>
            </div>

            <div class="form-group">
              <label for="profile_st_ba_passport">Passport no.</label>
                <%= form.text_field :st_ba_passport, class: 'form-control', id: 'profile_st_ba_passport', placeholder: 'Passport no.', autofocus: true %>
            </div>

            <div class="form-group">
              <label for="profile_st_ba_nationality">Nationality</label>
                <%= form.text_field :st_ba_nationality, class: 'form-control', id: 'profile_st_ba_nationality', placeholder: 'Nationality', autofocus: true %>
            </div>

            <div class="form-group">
              <%= image_tag @st_profile.st_ba_passport_photo.url(:thumb) if @st_profile.st_ba_passport_photo? %>
              <label for="profile_st_ba_passport_photo">Passport photo</label>
                <%= form.file_field :st_ba_passport_photo, class: 'btn btn-default btn-xs', id: 'profile_st_ba_passport_photo' %>
                <%= form.hidden_field :st_ba_passport_photo_cache %>
            </div>

            <div class="form-group">
              <%= image_tag @st_profile.st_ba_official_photo.url(:thumb) if @st_profile.st_ba_official_photo? %>
              <label for="profile_st_ba_official_photo">Official photo</label>
                <%= form.file_field :st_ba_official_photo, class: 'btn btn-default btn-xs', id: 'profile_st_ba_official_photo' %>
                <%= form.hidden_field :st_ba_official_photo_cache %>
            </div>

            <div class="form-group">
              <%= form.button "Update", class: "btn btn-primary", style: 'width:65%;', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>Please wait...."} %>&nbsp;&nbsp;
              <li class="btn btn-primary" style='width:32%;' id="go_back"> Cancel</li>
            </div>

          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>