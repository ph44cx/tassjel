<script type="text/javascript">
  $(document).ready(function(){
    $(".myTable1").DataTable();
    $('.createProfile').click(function(){
      $('.row').empty();
      $(".row").append("<%= escape_javascript render(:partial => '/university_profiles/form') %>");
    })
  });
</script>
<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
<!-- <p id="notice"><%#= notice %></p> -->
    <% @university_profiles = UniversityProfile.all %>
      <table class="table table-striped table-bordered dt-responsive nowrap myTable1">
      <button class="btn btn-primary customBtn createProfile">Create profile</button>
        <thead>
          <tr>
            <th>description</th>
            <th>log rank</th>
            <th>founded date</th>
            <th>url</th>
            <th>email</th>
            <th>phone1</th>
            <th>phone2</th>
            <th>fax</th>
            <th>address</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @university_profiles.each do |university_profile| %>
            <tr>
              <td><%= university_profile.uni_description %></td>
              <td><%= university_profile.uni_log_rank %></td>
              <td><%= university_profile.uni_founded_date %></td>
              <td><%= university_profile.uni_url %></td>
              <td><%= university_profile.uni_email %></td>
              <td><%= university_profile.uni_phone1 %></td>
              <td><%= university_profile.uni_phone2 %></td>
              <td><%= university_profile.uni_fax %></td>
              <td><%= university_profile.uni_address %></td>
              <td><%= link_to 'Show', university_profile %>
                  <%= link_to 'Edit', edit_university_profile_path(university_profile) %>
                  <%= link_to 'Destroy', university_profile, data: { behavior: 'delete' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>