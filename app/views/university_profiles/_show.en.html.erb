<script>
  $(document).ready(function(){
      $(".goBackShow").click(function(){
      window.location.replace("<%=unm_dashboard_url%>")
    });
  });
</script>

<div class="row">
  <div class="col-lg-12">
    <div class="well bs-component">
      <fieldset>
        <legend><%= @university_profile.university.uni_name%>'s profile
        <li href="#" class="btn btn-primary custom goBackShow">Back</li>
        </legend>
        <div class="col-sm-4">
          <p>
            <strong>Email:</strong>
            <%= @university_profile.uni_email %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @university_profile.uni_description.html_safe %>
          </p>

          <p>
            <strong>Log rank:</strong>
            <%= @university_profile.uni_loc_rank %>
          </p>

          <p>
            <strong>International rank:</strong>
            <%= @university_profile.uni_int_rank %>
          </p>

          <p>
            <strong>Founded date:</strong>
            <%= @university_profile.uni_founded_date %>
          </p>
        </div>

        <div class="col-sm-4">
          <p>
            <strong>Url:</strong>
            <%= @university_profile.uni_url %>
          </p>

          <p>
            <strong>Phone1:</strong>
            <%= @university_profile.uni_phone1 %>
          </p>

          <p>
            <strong>Phone2:</strong>
            <%= @university_profile.uni_phone2 %>
          </p>

          <p>
            <strong>Fax:</strong>
            <%= @university_profile.uni_fax %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= @university_profile.uni_address %>
          </p>

        </div>
        
        <div class="col-sm-4">
          <p>
            <strong>Logo:</strong>
            <%= image_tag @university_profile.uni_logo.url(:thumb) %>
          </p>

          <p>
            <strong>Cover photo:</strong>
            <%= image_tag @university_profile.uni_cover_photo.url(:thumb) %>
          </p>

          <p>
            <strong>Galaries:</strong>
            <%@university_profile.uni_galaries.each do |file|%>
            <%= image_tag file.url(:thumb) %>
            <%end%>
          </p>
        </div>
      </fieldset>
    </div>
  </div>
</div>
